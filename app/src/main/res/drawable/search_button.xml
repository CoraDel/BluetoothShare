<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#283593" />
            <gradient android:angle="-90" android:startColor="#1A237E" android:endColor="#5C6BC0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7986CB" />
            <solid android:color="#283593"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7986CB" />
            <gradient android:angle="-90" android:startColor="#C5CAE9" android:endColor="#5C6BC0" />
        </shape>
    </item>
</selector>